@import 'nib'
@import 'jeet'
@import 'rupture'

*, *::before, *::after
  box-sizing border-box

::selection
  background magenta
  color #fff

html
  height 100%
  font-size 62.5%

body
  font-family Lato, sans-serif
  width 100%
  min-height 100%
  padding 4em
  background-image linear-gradient(45deg, #00b9ff, #0094cc)
  color #eee

h1, h2, h3, h4, h5, h6
  font-weight 300

h1
  display block
  border-bottom 1px dashed #fff
  font-size 4em
  font-weight 100
  small
    text-transform uppercase
    font-size 0.5em
    color #e7e7e7

.nav
  col(2/12)

.viewport
  col(10/12)
